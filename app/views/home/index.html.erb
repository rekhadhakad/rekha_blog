<div class="row">
	<div class="large-12 columns">
		<%= image_tag('samosys.png')%>
	<hr>
	</div>
</div>

<div class="row">
  
  <% @posts.each do |post| %>
    <div class="large-4 columns">
		  <%= image_tag post.image.url(:thumb), :style => "height: 250px; width: 250px;" %>
		</div>
		<div class="large-8 columns">
			<h4><%= post.title %></h4>
			<p><%= post.body.html_safe %> &nbsp;  &nbsp;  
			  <%= link_to 'Read More..', post %><br>
			  <span class="create_date"><%= post.created_at.strftime('%d %b %Y')%> &nbsp; <%= post.user.fullname if post.user.present?%></span>
			  </p>
			</div>
			
			<div class="large-10 columns " id="comments">
			<strong>Users Comments </strong><br>
				<% if !post.comments.blank? %>
					<% post.comments.each do |comment| %>
					<div class="comment">
						<%= comment.body %>
					</div>	
						<br>
					<% end %>
				<% else %>
				  <p> No comments </p>
				<% end %>
			</div>  
		 
	
		<hr>
	<% end %>
</div>

	